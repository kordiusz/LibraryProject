<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.TextFlow?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.TextArea?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.carproject.LoginController"
      prefHeight="400.0" prefWidth="600.0">


    <HBox spacing="10" styleClass="toolbar">
        <!-- Logo -->
        <ImageView  fitWidth="32" fitHeight="32">
            <Image url="@/logo.png"/>
        </ImageView>

        <!-- Title -->
        <VBox alignment="CENTER_LEFT" styleClass="logo-text">
            <Label text="Igor's Library" styleClass="h4 text-white" />
        </VBox>

        <!-- Spacer -->
        <Region HBox.hgrow="ALWAYS" />

        <!-- Example of right-aligned content (optional) -->
        <Label text="Welcome!" styleClass="text-white" />
    </HBox>


    <VBox spacing="10" alignment="CENTER">

    <Label text="Podaj nazwe uzytkownika" style="-fx-font-size: 13; -fx-padding: 10 0 0 0"/>
    <TextArea  maxHeight="8" maxWidth="250" fx:id="username_field"/>
    <Button text="Zaloguj" styleClass="btn, btn-warning" style="-fx-padding: 10 0" fx:id="submit_btn"/>
    </VBox>
</VBox>

