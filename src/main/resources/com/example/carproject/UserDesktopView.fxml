<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.carproject.UserDesktopController"
      prefHeight="400.0" prefWidth="600.0"
    >
    <HBox spacing="10" styleClass="toolbar">
        <!-- Logo -->
        <ImageView  fitWidth="32" fitHeight="32">
            <Image url="@/Fox.svg.png"/>
        </ImageView>

        <!-- Title -->
        <VBox alignment="CENTER_LEFT" styleClass="logo-text">
            <Label text="LightLib" styleClass="h4 text-white" />
        </VBox>

        <!-- Spacer -->
        <Region HBox.hgrow="ALWAYS" />

        <!-- Example of right-aligned content (optional) -->
        <VBox>
            <Label text="Ilosc pkt"/>
            <Label text="0" styleClass="text-success" fx:id="points_label"/>
        </VBox>
    </HBox>

    <VBox alignment="CENTER">
        <Region prefHeight="20"/>
        <TextFlow textAlignment="CENTER">
            <Text text="Czesc, " style="-fx-font-size: 20;" />
            <Text text="..." fx:id="full_name_label" style="-fx-font-size: 20;" styleClass="text-success" />
        </TextFlow>

        <GridPane hgap="10" vgap="10" prefWidth="300" prefHeight="100" alignment="CENTER">


            <Button GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="btn, btn-primary" style="-fx-padding: 30" text="Przegladaj" fx:id="browse_btn"/>
            <Button GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="btn, btn-primary" style="-fx-padding: 30" text="Wypozyczone" fx:id="borrow_btn"/>
        </GridPane>
        <TextFlow textAlignment="CENTER">
            <Text text="W sumie wypozyczyles "/>
            <Text text="0" styleClass="text-primary" fx:id="rented_total_label"/>
            <Text text=" ksiazek."/>
        </TextFlow>
    <TextFlow textAlignment="CENTER">
        <Text text="Jestes uzytkownikiem od "/>
        <Text text="..." styleClass="text-primary" fx:id="timestamp_label"/>
    </TextFlow>
        <Region prefHeight="10"/>
    <Button text="Regulamin" styleClass="btn, btn-default"/>
    </VBox>

</VBox>
